<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('../partials/head.ejs') %>
		<title>RWH Meetup</title>
	</head>
	<body class="min-h-screen">
		<%- include('../partials/header.ejs') %>
		<main class="my-5">
			<%- include('../partials/flash.ejs') %>
			<h1 class="text-3xl text-center mb-5 font-medium">Login</h1>
			<div class="container mx-auto lg:px-48">
				<form class="flex flex-col gap-2" action="/users/login" method="post" autocomplete="off">
					<div>
						<label for="email" class="block mb-1">Email</label>
						<input class="border border-[#046a37] w-full p-1 rounded" type="email" name="email" id="email" required />
					</div>
					<div>
						<label for="password" class="block mb-1">Password</label>
						<input
							class="border border-[#046a37] w-full p-1 rounded"
							type="password"
							name="password"
							id="password"
							minlength="8"
							required
						/>
					</div>
					<button class="bg-[#046a37] hover:bg-green-900 w-full text-white p-2 rounded mt-4" type="submit">
						Login
					</button>
				</form>
			</div>
		</main>
		<%- include('../partials/footer.ejs') %>
	</body>
</html>
